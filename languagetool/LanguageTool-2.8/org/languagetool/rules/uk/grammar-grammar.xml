              </marker>
            </pattern>
            <message>Правильно: <suggestion>…надцять хвилин</suggestion></message>
            <example type="incorrect">о першій годині <marker>двадцятій хвилині</marker></example>
            <example type="incorrect">о першій годині <marker>тридцять п'ятій хвилині</marker></example>
            <example type="correct">о першій годині двадцять п'ять хвилин</example>
          </rule>
          <rule>
            <pattern>
              <token regexp="yes">[1-9]-і?й|[12][0-9]-і?й</token>
              <token>годині</token>
              <marker>
                <token postag_regexp="yes" postag="num.*" min="0"/>
                <token postag_regexp="yes" postag="adj.*"/>
                <token>хвилині</token>
              </marker>
            </pattern>
            <message>Правильно: <suggestion>…надцять хвилин</suggestion></message>
            <example type="incorrect">о 10-й годині <marker>двадцять п'ятій хвилині</marker></example>
            <example type="correct">о 10-й годині двадцять п'ять хвилин</example>
          </rule>
          <rule>
            <pattern>
              <token>без</token>
              <token postag_regexp="yes" postag="num.*" min="1" max="2"/>
              <token min="0">хвилин</token>
              <token postag_regexp="yes" postag="adj:f:v_naz.*" regexp="yes" inflected="yes">&hours;</token>
            </pattern>
            <message>Правильно: <suggestion>за <match no="2" postag_regexp="yes" postag="numr:v_naz.*"/> <match no="3"/> <match no="4"/></suggestion></message>
